{
  "file_type": "json",
  "name": "words",
  "display": "word",
  "compare": "compare_form",
  "sorting": "sort_form",
  "transducers": [
    {
      "source": "word",
      "target": "compare_form",
      "functions": ["../transducers/approx.yaml"]
    },
    {
      "source": "word",
      "target": "sort_form",
      "functions": ["lambda x: x.lower()"]
    }
  ],
  "targets": {
    "entryID": "entryID",
    "word": "word",
    "definition": "definition",
    "audio": {
      "listof": "audio",
      "value": {
        "speaker": "description",
        "filename": "filename"
      }
    },
    "img": "img[0].filename",
    "theme": "theme[0].parent_category",
    "secondary_theme": "theme[0].category",
    "optional": [
      {
        "Reference": "optional.Reference",
        "Part of Speech": "optional.'Part of Speech'"
      }
    ]
  }
}
